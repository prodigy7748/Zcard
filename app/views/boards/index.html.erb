<h1>看板列表</h1>
<% if user_signed_in? %>
  <%= link_to "新增看板", new_board_path %>
<% end %>
<ul>
    <% @boards.each do |board| %>
        <li>
          <%= link_to board.title, board_path(board.id) %>
            <%= link_to "編輯", edit_board_path(board.id)%>
            <%= link_to "刪除", board, method: 'delete', data: { confirm: '是否確定刪除?' } %>
        </li>
    <% end %>
    <br>
    <p>看板數量:<%= @boards.count %></p>
</ul>