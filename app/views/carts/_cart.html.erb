<table>

  <thead>
    <th>
      <tr>
        <td>商品名稱</td>
        <td>數量</td>
        <td>單價</td>
        <td>小計</td>
      </tr>
    </th>
  </thead>

  <tbody>
    <% cart.items.each do |item| %>
    <th>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
        <td><%= item.product.price %></td>
      </tr>
    </th>
    <%end%>
  </tbody>

  <tfoot>
    <tr>
      <td colspan='3'>總價</td>
      <td><%= cart.total_price %></td>
    </tr>
  </tfoot>

</table>