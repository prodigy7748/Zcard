<h2>購物車</h2>
<%= link_to '清空購物車', cart_path, method: 'delete' %>


<table>

  <thead>
    <th>
      <tr>
        <td>商品名稱</td>
        <td>數量</td>
        <td>單價</td>
        <td>小計</td>
      </tr>
    </th>
  </thead>

  <tbody>
    <% current_cart.items.each do |item| %>
    <th>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.quantity %></td>
        <td><%= item.product.price %></td>
        <td><%= item.product.price %></td>
      </tr>
    </th>
    <%end%>
  </tbody>

  <tfoot>
    <tr>
      <td colspan='3'>總價</td>
      <td><%= current_cart.total_price %></td>
    </tr>
  </tfoot>

</table>

<%= link_to '繼續購買', pricing_path %>
<%= link_to '結帳', checkout_cart_path if not current_cart.empty? %>